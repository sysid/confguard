# Use as the top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
charset = utf-8
indent_style = space
indent_size = 4

[*.{md,markdown}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

# 2 space indentation
[*.{json,yml,yaml,sh}]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
